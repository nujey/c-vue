  .total-data
    height 74px;
    display flex;
    align-items center;
    justify-content space-between;
    padding 0 12px;
    border-top 1px solid rgba(255, 255, 255, .5);
    & > p
      color #fff;
      display flex;
      flex-direction column;
      text-align center;
      padding 0 20px;
      font-size 12px;
      position relative;
      & > span:nth-child(1)
        font-size 21px;
        font-weight 500;
      & > span:nth-child(2)
        margin-top: 3px;
    &__all
      // min-width 88px;
    &__maxday
      position relative;
      box-sizing border-box;
      &:before
        position absolute;
        width 1px;
        height 24px;
        content '';
        background rgba(255, 255, 255, .5);
        left 5px;
        top 12px;
      &:after
        position absolute;
        width 1px;
        height 24px;
        content '';
        background rgba(255, 255, 255, .5);
        right 5px;
        top 12px;
    .total-icon
      width: 4px;
      height 4px;
      border 1px solid #fff;
      border-radius: 50%;
      position absolute;
      top: 35px;
      left: 10px;
      background: #f00;
      z-index: 1000;
      &:after
        position: absolute;
        content: '';
        height 1px;
        width: 3px;
        right: -3px;
        top 1px;
        background: #fff;
      &:before
        position: absolute;
        content: '';
        height 1px;
        width: 3px;
        left: -3px;
        top 1px;
        background: #fff;
    .icon-one
      background #3197FA;
    .icon-two
      background #FF2C40
    .icon-three
      background #09BB07
